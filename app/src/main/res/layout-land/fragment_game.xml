<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/blackfilter"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/cute_soul"
            android:layout_width="200dp"
            android:layout_height="240dp"
            android:layout_marginBottom="96dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/soul"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/soul_flash" />

        <ImageView
            android:id="@+id/cute_gost"
            android:layout_width="155dp"
            android:layout_height="160dp"
            android:layout_marginBottom="36dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/todo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ghost_flash" />

        <ImageButton
            android:id="@+id/start_adventure"
            android:layout_width="315dp"
            android:layout_height="145dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="56dp"
            android:background="#00FF0000"
            android:contentDescription="@string/migong"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toStartOf="@+id/cute_soul"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/startgame" />

        <ImageButton
            android:id="@+id/battle"
            android:layout_width="100dp"
            android:layout_height="95dp"
            android:layout_marginBottom="56dp"
            android:layout_marginStart="32dp"
            android:background="#00FF0000"
            android:contentDescription="@string/fight"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cute_gost"
            app:srcCompat="@drawable/battle" />

        <ImageButton
            android:id="@+id/story"
            android:layout_width="100dp"
            android:layout_height="95dp"
            android:layout_marginBottom="56dp"
            android:layout_marginStart="40dp"
            android:background="#00FF0000"
            android:contentDescription="@string/story"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/battle"
            app:srcCompat="@drawable/story" />

        <ImageButton
            android:id="@+id/player_head"
            android:layout_width="125dp"
            android:layout_height="126dp"
            android:layout_marginBottom="84dp"
            android:background="#00FF0000"
            android:contentDescription="@string/head"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/cute_gost"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/braveheart" />

        <ImageButton
            android:id="@+id/help"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:background="#00FF0000"
            android:contentDescription="@string/helpp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/help" />

        <ImageButton
            android:id="@+id/options"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:background="#00FF0000"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/option"
            android:contentDescription="@string/options_button" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>

