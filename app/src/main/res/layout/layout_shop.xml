<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grocery_bg">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="543dp"
        android:layout_height="270dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grocery_book" />

    <ImageButton
        android:id="@+id/button_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="20dp"
        android:background="#00FF0000"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/buy" />

    <ImageButton
        android:id="@+id/item_button1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="60dp"
        android:background="#00FF0000"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/bear" />

    <ImageButton
        android:id="@+id/item_button2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="#00FF0000"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="@+id/item_button1"
        app:layout_constraintTop_toBottomOf="@+id/item_button1"
        app:srcCompat="@drawable/heal_bottle" />

    <ImageButton
        android:id="@+id/item_button3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="#00FF0000"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="@+id/item_button2"
        app:layout_constraintTop_toBottomOf="@+id/item_button2"
        app:srcCompat="@drawable/gift" />

    <ImageButton
        android:id="@+id/item_button4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="#00FF0000"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="@+id/item_button3"
        app:layout_constraintTop_toBottomOf="@+id/item_button3"
        app:srcCompat="@drawable/puple_fire" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/item_coin" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="91dp"
        android:layout_height="42dp"
        android:fontFamily="casual"
        android:text="Your Coin:\n"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/button_buy"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />
</android.support.constraint.ConstraintLayout>